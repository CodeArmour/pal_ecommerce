{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@pal/utils": ["packages/utils/src"],
      "@pal/utils/*": ["packages/utils/src/*"],
      "@pal/ui": ["packages/ui/src"],
      "@pal/ui/*": ["packages/ui/src/*"]
    }
  }
}

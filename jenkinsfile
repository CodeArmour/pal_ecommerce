pipeline {
  agent any

  options { timestamps() }

  stages {
    stage('Checkout') {
      steps { checkout scm }
    }

    stage('Setup Node') {
      steps {
        bat """
          node -v
          npm -v
        """
      }
    }

    stage('Install dependencies') {
      steps {
        bat """
          npx -y pnpm@10.9.0 --version
          npx -y pnpm@10.9.0 install --frozen-lockfile
        """
      }
    }

    stage('Build') {
      steps {
        bat """
          npx -y pnpm@10.9.0 build
        """
      }
    }
  }
}
